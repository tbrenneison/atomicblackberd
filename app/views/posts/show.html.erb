<div class="col-md-6 showpost">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text.html_safe %>
</p>

<p>Tags: <%= post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p> 

<% if user_signed_in? %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>
<% end %>
</div>
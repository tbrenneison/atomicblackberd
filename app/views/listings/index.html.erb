<div class="row">
	<div class="col-md-12">
		<h1 class="headerfont">For Sale</h1>
	</div>
</div>
<div class="row">
	<div class="col-md-2">
		<% if user_signed_in? %>
<li class="nav-link"><%= link_to 'New listing', new_listing_path %> </li>   
<% end %>
		<div id="tag_cloud" style="word-wrap:break-word;">
			<% tag_cloud Listing.tag_counts, %w{s m l} do |tag, css_class| %>
			<%= link_to tag.name, tag_path(tag.name), class: css_class %>
			<% end %>
		</div>
	</div>
<div class="row">
	<div class="col-md-1">
	</div>
	<div class="col-md-10">
<%= render partial: "onelisting", collection: @listings, as: :listing %>
</div>
	<div class="col-md-1">
	</div>
	<div class="col-md-9 paginationcontainer">
			<div class="page_info">
				<%= page_entries_info @listings %>
			</div>
			<div class="pagination">
				<%= will_paginate @listings, :container => false %>
			</div>
	</div>
</div>